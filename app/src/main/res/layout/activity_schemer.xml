<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schemer">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50sp">

            <EditText
                android:id="@+id/inputHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/color_hex_ex_ed1703"
                android:inputType="text"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/schemer_btn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find a Scheme"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="86dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/col1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_weight="0.14"
                android:text=""
                android:textColor="@color/Black"
                android:textColorHighlight="@color/White"
                android:textAlignment="viewStart"
                android:textSize="25sp">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/col2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_weight="0.14"
                android:text=""
                android:textColor="@color/Black"
                android:textColorHighlight="@color/White"
                android:textAlignment="viewStart"
                android:textSize="25sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/col3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_weight="0.14"
                android:text=""
                android:textColor="@color/Black"
                android:textColorHighlight="@color/White"
                android:textAlignment="viewStart"
                android:textSize="25sp">
            </Button>
        </TableRow>
    </TableLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="168sp"
            tools:layout_editor_absoluteY="231sp" />

        <TextView
            android:id="@+id/errorMSG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input is not an hex !"
            android:textColor="@color/Red"
            android:textSize="32sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="341dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>